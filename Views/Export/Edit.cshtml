@model Mangement_System.Data.Models.Money

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MoneyId" />
            <input type="hidden" asp-for="TypeMoney" />
            <input type="hidden" asp-for="DateOfMoney" />
            <div class="form-group">
                <label class="control-label">الاسم</label>
                <input asp-for="MoneyName" class="form-control" />
                <span asp-validation-for="MoneyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">المبلغ</label>
                <input asp-for="TotalMoney" class="form-control" />
                <span asp-validation-for="TotalMoney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
