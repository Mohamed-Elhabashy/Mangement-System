@model IEnumerable<Mangement_System.Data.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a style="text-decoration:none" asp-action="Create">إضافة موظف</a>
</p>
<div class="table-responsive" id="Table">
    <table class="table table-bordered table-striped th-center">
        <thead>
            <tr class="no-break">
                <th width="3%">#</th>
                <th>الاسم</th>
                <th width="11%">البلد</th>
                <th width="11%">الوظيفه</th>
                <th width="11%">المرتب</th>
                <th width="11%">تاريخ الميلاد</th>
                <th width="11%">تاريخ الالتحاق</th>
                <th width="20%"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <!-- if Not Result -->
                    <td colspan="7"><b>لا يوجد بيانات</b></td>
                </tr>
            }
            @{int i = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td class="no-break">@i</td>
                    <td>
                        @item.Name
                    </td>
                    <td>@item.country</td>
                    <td>@item.Role</td>
                    <td>@item.Salary</td>
                    <td>@item.Birthdate.ToString("yyyy/MM/dd")</td>
                    <td>@item.JoinInStaff.ToString("yyyy/MM/dd")</td>
                    <td>
                        <a style="text-decoration:none" asp-action="Edit" asp-route-id="@item.EmployeeId">تعديل</a>
                        <br />
                        <a style="text-decoration:none" asp-action="Delete" asp-route-id="@item.EmployeeId">حذف</a>
                        
                    </td>
                </tr>
                i++;
            }

        </tbody>
    </table>
</div>

