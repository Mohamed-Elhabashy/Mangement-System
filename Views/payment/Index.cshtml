@model IEnumerable<Mangement_System.Data.Models.PayStudent>

@{
    ViewData["Title"] = "Index";
}
<div class="panel-body">
    <form class="form-horizontal" asp-action="Filter" method="POST">
        <div class="form-group row">
            <div class="col-md-8">
                <input type="text" name="Name" class="form-control" placeholder="الاسم" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-8">
                <input type="reset" value="Reset" class="btn btn-secondary" />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
<section class="any-page-table">
    <div class="page-header">
        <a asp-action="ListGroups" class="btn btn-secondary">إضافة</a>
        <h3>الأشتراكات</h3>
    </div>
    <div class="table-responsive" id="Table">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="no-break">
                    <th>#</th>
                    <th>اسم الطالب</th>
                    <th>المجموعة</th>
                    <th>المبلغ</th>
                    <th>تاريخ الدفع</th>
                    <th>تاريخ العملية</th>
                    <th>تحكم</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <!-- if Not Result -->
                        <td colspan="6"><b>لا يوجد بيانات</b></td>
                    </tr>
                }
                @{int i = 1; }
                @foreach (var item in Model)
                {

                    <tr>
                        <td class="no-break">@i</td>
                        <td>
                            @item.student.StudentName
                        </td>
                        <td>@item.student.Group.GroupName</td>
                        <td>@item.TotalPay</td>
                        <td>@item.date</td>
                        <td>@item.DateOfPay</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.PayStudentId">تعديل</a>
                            <a class="btn btn-danger confirm" asp-action="Delete" asp-route-id="@item.PayStudentId">حذف</a>
                        </td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    </div>
    <div aria-label="Page navigation" class="text-center">
        <ul class="pagination pagination-lg">
            @{
                if (ViewBag.Pagenum > 1)
                {

                    @if (ViewBag.function == "Filter")
                    {
                        <li>
                            <a asp-action="Filter" asp-route-page="@(ViewBag.Pagenum-1)" asp-route-Name="@ViewBag.name" asp-route-Year="@ViewBag.Year" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-action="Index" asp-route-page="@(ViewBag.Pagenum-1)" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                }
                for (int j = 1; j <= ViewBag.TotalPageProblem; j++)
                {
                    if (ViewBag.function == "Filter")
                    {
                        <li class="@(ViewBag.Pagenum==j?"active":"")"><a asp-action="Filter" asp-route-page="@j" asp-route-Name="@ViewBag.name" asp-route-Year="@ViewBag.Year">@j</a></li>
                    }
                    else
                    {
                        <li class="@(ViewBag.Pagenum==j?"active":"")"><a asp-action="Index" asp-route-page="@j">@j</a></li>
                    }

                }
                if (ViewBag.Pagenum < ViewBag.TotalPageProblem)
                {

                    @if (ViewBag.function == "Filter")
                    {
                        <li>
                            <a asp-action="Filter" asp-route-page="@(ViewBag.Pagenum+1)" asp-route-Name="@ViewBag.name" asp-route-Year="@ViewBag.Year" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-action="Index" asp-route-page="@(ViewBag.Pagenum+1)" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }

                }

            }

        </ul>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
