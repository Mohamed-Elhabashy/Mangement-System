@model Mangement_System.Data.Models.PayStudent

@{
    ViewData["Title"] = "Edit";
}


<section class="any-form">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-5">الاشتراك</h3>
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="PayStudentId" />
                        <input type="hidden" asp-for="StudentId" />
                        <input type="hidden" asp-for="DateOfPay" />
                        <div class="form-group">
                            <input readonly asp-for="student.StudentName" class="form-control"  />
                            <small asp-validation-for="student.StudentName" class="text-danger form-text text-right"></small>
                        </div>
                        <div class="form-group">
                            <input asp-for="TotalPay" class="form-control" placeholder="المبلغ" />
                            <small asp-validation-for="TotalPay" class="text-danger form-text text-right"></small>
                        </div>
                        <div class="form-group">
                            <input asp-for="date" class="form-control" placeholder="تاريخ الدفع" />
                            <small asp-validation-for="date" class="text-danger form-text text-right"></small>
                        </div>

                        <div class="form-group my-4">
                            <button type="submit" class="btn btn-primary form-control">تعديل</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
