@model Mangement_System.Data.Models.PayStudent

@{
    ViewData["Title"] = "DeletePayStudent";
}

<p class="DeletedMessage">هل متاكد من حذف هذا الاشتراك ؟</p>
<table class="table-responsive" id="Table">
    <tr>
        <th scope="row">اسم الطالب :</th>
        <td>@Model.student.StudentName</td>
    </tr>
    <tr>
        <th scope="row">المبلغ :</th>
        <td>@Model.TotalPay</td>
    </tr>
    <tr>
        <th scope="row">التاريخ :</th>
        <td>@Model.date.ToString("yyyy-MM-dd")</td>
    </tr>
</table>



<form asp-action="DeletePayStudent">
    <input type="hidden" name="paystudentId" value="@Model.PayStudentId"/>
    <input type="hidden" name="groupId" value="@Model.student.GroupId" />
    <input type="submit" value="حذف" class="btn btn-danger" />
</form>
