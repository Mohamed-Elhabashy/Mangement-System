@model Mangement_System.ViewModels.Group.GroupViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="any-form">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-5">المجموعة</h3>
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="GroupId" />
                        <div class="form-group">
                            <label class="control-label">اسم المجموعة</label>
                            <input asp-for="GroupName" class="form-control" placeholder="الإسم" />
                            <small asp-validation-for="GroupName" class="text-danger form-text text-right"></small>
                        </div>
                        <div class="form-group">
                            <label class="control-label">المحفظ</label>
                            <select asp-for="EmployeeId" class="form-control">
                                @foreach (var item in Model.emplyee)
                                {
                                    if (item.EmployeeId == Model.EmployeeId)
                                    {
                                        <option selected value="@item.EmployeeId">@item.Name</option>
                                    }

                                    else
                                    {
                                        <option value="@item.EmployeeId">@item.Name</option>
                                    }

                                }
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>

                        <div class="form-group my-4">
                            <button type="submit" class="btn btn-primary form-control">تعديل</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}