@model Mangement_System.Data.Models.Group

@{
    ViewData["Title"] = "Details";
}

<section class="any-page-table">
    <div class="page-header">
        <h4>المحفظ : @Model.employee.Name</h4>
        <h3>@Model.GroupName</h3>
    </div>
    <div class="table-responsive" id="Table">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="no-break">
                    <th>#</th>
                    <th>اسم الطالب</th>
                    <th>المدرسة</th>
                    <th>رقم الوالد</th>
                    <th>وظيفة الأب</th>
                    <th>تاريخ الميلاد</th>
                    <th>تاريخ التقديم</th>
                    <th>تحكم</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Students.Count() == 0)
                {
                    <tr>
                        <!-- if Not Result -->
                        <td colspan="8"><b>لا يوجد بيانات</b></td>
                    </tr>
                }
                @{int i = 1; }
                @foreach (var item in Model.Students)
                {

                    <tr>
                        <td class="no-break">@i</td>
                        <td>
                            @item.StudentName
                        </td>
                        <td>@item.school</td>
                        <td>@item.phone</td>
                        <td>@item.FatherJob</td>
                        <td>@item.Birthdate.ToString("yyyy/MM/dd")</td>
                        <td>@item.Joinplace.ToString("yyyy/MM/dd")</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="WaitingStudent" asp-action="Edit" asp-route-id="@item.studentId">تعديل</a>
                            <a class="btn btn-danger confirm" asp-controller="WaitingStudent" asp-action="Delete" asp-route-id="@item.studentId">حذف</a>
                            <a class="btn btn-info" asp-controller="WaitingStudent" asp-action="AddToGroup" asp-route-id="@item.studentId">نقل لجروب</a>
                        </td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    </div>

</section>
