@model IEnumerable<Mangement_System.Data.Models.Group>

@{
    ViewData["Title"] = "Index";
}
<section class="any-page-table">
    <div class="page-header">
        <a asp-action="Create" class="btn btn-secondary">إضافة مجموعة</a>
        <h3>المجموعات</h3>
    </div>
    <div class="table-responsive" id="Table">
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="no-break">
                    <th>#</th>
                    <th>اسم المجموعة</th>
                    <th>المحفظ</th>
                    <th>تحكم</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <!-- if Not Result -->
                        <td colspan="4"><b>لا يوجد بيانات</b></td>
                    </tr>
                }
                @{int i = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="no-break">@i</td>
                        <td>
                            <a  asp-action="Details" asp-route-id="@item.groupId">@item.GroupName</a>
                        </td>
                        <td>@item.employee.Name</td>
                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.groupId">تفاصيل</a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.groupId">تعديل</a>
                            <a class="btn btn-danger confirm" asp-action="Delete" asp-route-id="@item.groupId">حذف</a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}