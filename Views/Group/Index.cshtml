@model IEnumerable<Mangement_System.Data.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a style="text-decoration:none" asp-action="Create">إضافة مجموعة</a>
</p>
<div class="table-responsive" id="Table">
    <table class="table table-bordered table-striped th-center">
        <thead>
            <tr class="no-break">
                <th width="3%">#</th>
                <th>اسم المجموعة</th>
                <th width="11%">المحفظ</th>
                <th width="20%"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <!-- if Not Result -->
                    <td colspan="7"><b>لا يوجد بيانات</b></td>
                </tr>
            }
            @{int i = 1; }
            @foreach (var item in Model)
            {

                <tr>
                    <td class="no-break">@i</td>
                    <td>
                        @item.GroupName
                    </td>
                    <td>@item.employee.Name</td>
                    <td>
                        <a style="text-decoration:none" asp-action="Details" asp-route-id="@item.groupId">تفاصيل</a>
                        <br />
                        <a style="text-decoration:none" asp-action="Edit" asp-route-id="@item.groupId">تعديل</a>
                        <br />
                        <a style="text-decoration:none" asp-action="Delete" asp-route-id="@item.groupId">حذف</a>
                    </td>
                </tr>
                i++;
            }

        </tbody>
    </table>
</div>
