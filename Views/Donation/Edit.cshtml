@model Mangement_System.Data.Models.Money

@{
    ViewData["Title"] = "Edit";
}


<section class="any-form">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="mb-5">التبرعات</h3>
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="MoneyId" />
                        <input type="hidden" asp-for="TypeMoney" />
                        <input type="hidden" asp-for="DateOfMoney" />
                        <div class="form-group">
                            <input asp-for="MoneyName" class="form-control" placeholder="الإسم" />
                            <small asp-validation-for="MoneyName" class="text-danger form-text text-right"></small>
                        </div>
                        <div class="form-group">
                            <input asp-for="TotalMoney" class="form-control" placeholder="المبلغ" />
                            <small asp-validation-for="TotalMoney" class="text-danger form-text text-right"></small>
                        </div>

                        <div class="form-group my-4">
                            <button type="submit" class="btn btn-primary form-control">تعديل</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
